}
.courseContent{
  margin-top: 140rpx;
}
/* 课程介绍--老师信息 */
.mainContent {
  width: 100vw;
  height: auto;
  background: #FFFFFF;
  border-radius: 48rpx 48rpx 0px 0px;
  position: relative;
  top: -140rpx;
  border: 1px solid #fff;
  z-index: 10;
}
.couseHeader{
  /* margin-bottom: 3rpx; */
  height: 80rpx;
}
.introduce {
  display: inline-block;
  margin-left: 28rpx;
  width: 128rpx;
  height: 44rpx;
  text-align: center;
  position:absolute;
  top: 342;
  width: auto;
  height: 44rpx;
}
.teacher{
  left: 206rpx;
  margin-left: 0rpx;
}
.huxian {
  width: 37rpx;
  height: 7rpx;
  visibility: hidden;
  padding-bottom: 15rpx;
}

.introduceText {
  font-size: 16px;
  font-family: PingFang SC-Medium, PingFang SC;
  font-weight: 400;
  z-index: 99;
}

/* 选中样式 */
.active {
  color: #EB9A15;
  font-weight: bold;
}
.huxianChoose{
  visibility:visible;
}
#empty{
  margin-left: 50rpx;
}
/* 课程列表 */
.courseList{
  position: relative;
  padding: 0 28rpx;
  box-sizing: border-box;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.list{
  display: inline-block;
  /* margin-right: 16rpx; */
  
  overflow: hidden;
}
