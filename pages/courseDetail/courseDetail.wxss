/* 课程介绍 */
.title {
  display: flex;
  justify-content: center;
  font-size: 16px;
  color: #1E1E20;
  vertical-align: top;
  margin: 40rpx 12rpx 16rpx 12rpx;
  font-weight:  bold;
}

.content {
  margin: 12rpx 22rpx 35rpx 22rpx;
  display: flex;
  justify-content: center;
  font-size: 14px;
