/* 一节课的样式 */
.liveContainerOne {
  display: flex;
  justify-content: space-between;
  position: relative;
}

.coverOneContainer {
  width: 320rpx;
  height: 208rpx;
  display: inline-block;
  /* position: relative; */
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 播放按钮 */
.bofangImg {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
}

.coverOneImg {
  width: 320rpx;
  height: 208rpx;
  border-radius: 24rpx;
  opacity: 1;
  /* display: inline; */
}

.history {
  width: 334rpx;
  height: 200rpx;
  border-radius: 16rpx;
}

.rightDesc {
  display: inline-block;
  vertical-align: top;
  width: 310rpx;
  /* margin-left: 26rpx; */
}

/* 正在直播icon */
.zhibo {
  width: 129rpx;
  height: 43rpx;
  line-height: 43rpx;
  background: #FD9770;
  border-radius: 16rpx 0px 22rpx 0px;
  position: absolute;
  top: 0;
  left: 0;
  color: #fff;
  font-size: 10px;
}
.zhiboIcon{
  width: 24rpx;
  height: 22rpx;
  margin-left: 12rpx;
  margin-right: 4rpx;
  vertical-align: middle;
}

/* 直播名称 */
.livingName {
  display: block;
  width: 300rpx;
  height: 40rpx;
  font-size: 14px;
  font-family: PingFang SC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
}

.over {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 直播短描述 */
.shortDesc {
  display: block;
  width: 300rpx;
  height: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 14px;
  color: #666666;
  margin-top: 8rpx;
  margin-bottom: 28rpx;
}

/* 老师及开播时长描述 */
/* .teacherDesc{
  margin-top: 70rpx;
} */
.teacherImg {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.teacherName {
  color: #666666;
  /* font-family: PingFang SC-Regular, PingFang SC; */
  font-size: 14px;
  margin-left: 20rpx;
}

.startTime {
  color: #666666;
  font-size: 12px;
  margin-left: 18rpx;
}

/* 查看回放 */
.huifang {
  width: 100rpx;
  height: 44rpx;
  background: #FD9770;
  border-radius: 16rpx;
  opacity: 1;
  color: #fff;
  font-size: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 160rpx;
  right: 20rpx;
}